<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/artist_icon_size"
        android:layout_height="@dimen/artist_icon_size"
        android:id="@+id/album_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/artist_icon_margins"/>

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/album_icon"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/album_icon"
        android:layout_below="@id/album_title"
        />
</RelativeLayout>