<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_notification_key"
        android:title="@string/notification"
        android:summary="@string/notif_desc"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/pref_country_key"
        android:title="@string/pref_country"
        android:dialogTitle="@string/pref_contry_code"
        android:entries="@array/country_names"
        android:entryValues="@array/country_codes"
        android:defaultValue="@string/pref_default_country" />
</PreferenceScreen>